<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#bdbdc7"
    android:weightSum="3"
    tools:context=".SecondaryActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Project1.AppBarOverlay">


    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:id="@+id/Intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="29dp"
        android:text="All Categories"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:weightSum="2"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:id="@+id/cardWeb"
            android:layout_weight="1"
            android:backgroundTint="#e3e3e1"
            app:cardCornerRadius="30dp"
            android:layout_height="match_parent" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web Development"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="cursive"
                android:layout_gravity="center"
                android:textSize="28dp"
                android:textColor="#151515"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:id="@+id/cardApp"
            android:layout_weight="1"
            android:backgroundTint="#e3e3e1"
            app:cardCornerRadius="30dp"
            android:layout_height="match_parent" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="App development"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:layout_gravity="center"
                android:textSize="28dp"
                android:textColor="#151515"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:weightSum="2"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/cardMl"
            android:layout_margin="15dp"
            android:layout_weight="1"

            android:backgroundTint="#e3e3e1"
            app:cardCornerRadius="30dp"
            android:layout_height="match_parent" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Ai-Ml"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:layout_gravity="center"
                android:textSize="28dp"
                android:textColor="#151515"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:backgroundTint="#e3e3e1"
            app:cardCornerRadius="30dp"
            android:id="@+id/cardAi"
            android:layout_height="match_parent" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Blockchain"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:layout_gravity="center"
                android:textSize="28dp"
                android:textColor="#151515"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:weightSum="2"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/cardCloud"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:backgroundTint="#e3e3e1"
            app:cardCornerRadius="30dp"
            android:layout_height="match_parent" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Cloud Computing"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:layout_gravity="center"
                android:textSize="28dp"
                android:textColor="#151515"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:backgroundTint="#e3e3e1"
            app:cardCornerRadius="30dp"
            android:id="@+id/cardNetwork"
            android:layout_height="match_parent" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Network Security"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:layout_gravity="center"
                android:textSize="28dp"
                android:textColor="#151515"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>